<h1>New Game</h1>
<br>
<ul id="letters">
  <% @available_letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'available_letters', @available_letters %>
  <%= hidden_field_tag 'start_time', @start_time %>
  <div class="form-group">
    <br>
    <label for="try">What is the longest word you can find?</label>
    <input type="text" name="try" id="try" class="form-control">
  </div>
  <input type="submit" class="btn btn-primary" value="Play">
</form>
